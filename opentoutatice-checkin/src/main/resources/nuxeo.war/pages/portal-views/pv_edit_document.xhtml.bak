<ui:composition template="/pages/basic_page.xhtml"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:ui="http://java.sun.com/jsf/facelets"
  xmlns:h="http://java.sun.com/jsf/html"
  xmlns:nxl="http://nuxeo.org/nxforms/layout"
  xmlns:nxu="http://nuxeo.org/nxweb/util"
  xmlns:nxh="http://nuxeo.org/nxweb/html">
  
  	<ui:param name="pageName" value="portal-view" />

	<ui:define name="basic body">

		<nxu:set var="currentDocIsDraft" value="#{checkinActions.isDraft()}" cache="true"/>
    
        <div class="container">

           <div class="row">
                <div class="#{nxu:test(currentDocIsDraft, 'col-sm-10', 'col-sm-12')}">
                    <h3>
                        <h:outputText
                            value="#{messages['toutatice.views.edit.title']} '#{currentDocument.title}'" />
                     
                       
                    
                    </h3>
                </div>
                
                <h:panelGroup rendered="#{currentDocIsDraft}">
                    <div class="col-sm-2">
                        <h4>
	                        <span class="pull-right">
	                            <span class="label label-info">
	                                <i class="glyphicons glyphicons-notes visible-xs-inline-block"></i>
	                                <span>#{messages['ottc.checkin.draft']}</span>
	                            </span>
	                        </span>
                        </h4>
                   </div>
                </h:panelGroup>
                
            </div>

			<ui:include src="/incl/pv_message_banner.xhtml" />

			<h:form enctype="multipart/form-data" id="document_edit"
				class="form form-horizontal" role="form">

				<nxl:documentLayout mode="edit" value="#{currentDocument}"
					template="/layouts/toutatice_div_layout_edit.xhtml" />

				<nav class="navbar navbar-default navbar-fixed-bottom">
					<div class="container-fluid">
						<div class="col-sm-offset-2">
							<nxu:set var="actions"
								value="#{webActions.getActionsList('TOUTATICE_EDIT_DOCUMENT_FORM')}"
								cache="true">
								<ui:repeat var="action" value="#{actions}">
									<nxh:commandButton action="#{action.getLink()}"
										immediate="#{action.immediate}" onclick="#{action.confirm}"
										id="header_edit_doc_#{action.id}"
										value="#{messages[action.label]}" class="btn btn-primary navbar-btn">
									</nxh:commandButton>
								</ui:repeat>
							</nxu:set>
						</div>
					</div>
				</nav>
				
				<!-- FIXME !!! -->
				<h:inputHidden name="fromUrl" value="#{pageBean.fromUrl}" />

			</h:form>

			<div class="pv-footer"></div>
		</div>
	</ui:define>

</ui:composition>